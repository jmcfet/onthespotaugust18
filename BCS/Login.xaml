<Window x:Class="BCS.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BCS"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="400">
    <Grid>
        <Label Content="UserName" HorizontalAlignment="Left" Margin="75,28,0,0" VerticalAlignment="Top" Width="81"/>
        <TextBox Name="Name" HorizontalAlignment="Left" Height="23" Margin="149,31,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="password" HorizontalAlignment="Left" Margin="84,80,0,0" VerticalAlignment="Top" RenderTransformOrigin="0,0.346" Width="67"/>
        <TextBox Name="Password" HorizontalAlignment="Left" Height="23" Margin="149,83,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Content="login" HorizontalAlignment="Left" Margin="122,132,0,0" VerticalAlignment="Top" Width="75" Click="Login_Click"/>
        <Button Content="Cancel" Name="Cancel" HorizontalAlignment="Left" Margin="227,132,0,0" VerticalAlignment="Top" Width="75" Click="Cancel_Click"/>

    </Grid>
</Window>
