<Window x:Class="scheduler.Dialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:scheduler"
        mc:Ignorable="d"
        Title="Get Password" Height="300" Width="300">
    <Grid>
        <StackPanel>
            <TextBlock Margin="5" Text="Super user password:" FontWeight="Bold" FontFamily="Cambria" />
            <TextBox MinWidth="150" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="InputTextBox"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="Done" Margin="5" Content="Done" Foreground="White" Background="Black" Click="YesButton_Click"/>
            
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
